<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/header.ejs") %>
        <title>Products</title>

        <style>
            table {
                border-collapse: collapse;
                width: 100%;
            }

            th,
            td {
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #f2f2f2
            }

            th {
                background-color: #f78132;
                color: white;
            }

            a {
                text-decoration: none;
            }

            a:hover {
                text-decoration: underline;
            }

            h1 {
                text-align: center;
            }

            table {
                margin: 0 auto;
                width: 50%;
                border: 3px solid #f1f1f1;
                padding: 10px;
            }
        </style>
</head>

<body>
    <%- include("./partials/navbar") %>
        <h1>
            Our Products
        </h1>
        <table>
            <thead>
                <th>Name</th>
                <th>Details</th>
                <th>Delete</th>
                <th>Edit</th>
            </thead>
            <tbody>

                <% for(let i=0; i<products.length; i++) { %>
                    <tr>
                        <td>
                            <%= products[i].name %>
                        </td>
                        <td>
                            <a href="product/<%= products[i]._id %> %>">
                                Full Detail
                            </a>
                        </td>
                        <td>
                            <a href="product/delete/<%= products[i]._id %> %>">
                                Delete
                            </a>
                        </td>
                        <td>
                            <a href="product/edit/<%= products[i]._id %> %>">
                                Edit
                            </a>
                        </td>

                    </tr>
                    <% } %>

            </tbody>
        </table>

</body>

</html>